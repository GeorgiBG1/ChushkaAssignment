@model ICollection<OrderViewModel>
<div class="container-fluid">
    <h1 class="text-center">All Orders</h1>
    <hr class="hr-2 bg-dark" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col-md-4">Order ID</th>
                <th class="col-md-2">Customer</th>
                <th class="col-md-2">Product</th>
                <th class="col-md-2">Ordered On</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-4">@Model.ElementAtOrDefault(i)!.Id</td>
                    <td class="col-md-2">@Model.ElementAtOrDefault(i)!.Customer.FullName</td>
                    <td class="col-md-2">@Model.ElementAtOrDefault(i)!.Product.Name</td>
                    <td class="col-md-2">@Model.ElementAtOrDefault(i)!.OrderedOn.ToString("HH:mm dd/MM/yyyy")</td>
                </tr>
            }
    </table>
</div>