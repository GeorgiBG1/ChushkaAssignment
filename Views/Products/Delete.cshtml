@model ProductViewModel
<h1 class="text-center">Delete Product</h1>
<hr class="hr-2 bg-dark" />
<form asp-action="Delete" method="post" class="mx-auto half-width">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name..." name="Name" value="@Model.Name" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" class="form-control" id="price" placeholder="Price..." name="Price" value="@Model.Price" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="4" placeholder="Description..." name="Description" disabled>@Model.Description</textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        @{

            string[] str = { "Food", "Domestic", "Health", "Cosmetic", "Other" };
            @foreach (var type in Model.ProductTypes)
            {
                if (Model.Type.ToString() == type)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="ProductType" value="@type" checked="checked" />
                        <label class="form-check-label" asp-for="@Model.ProductType">@type</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="ProductType" value="@type" />
                        <label class="form-check-label" asp-for="@Model.ProductType">@type</label>
                    </div>
                }
            }
        }
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn chushka-bg-color">Delete</button>
        <button type="submit" class="btn chushka-bg-color" asp-action="Details" asp-route-id="@Model.Id">Cancel</button>
    </div>
</form>