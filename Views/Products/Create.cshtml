@model ProductBindingModel
<h1 class="text-center">Create Product</h1>
<hr class="hr-2 bg-dark" />
<form method="post" class="mx-auto half-width" >
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name..." name="name">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" id="price" placeholder="Price..." name="price">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="4" placeholder="Description..." name="description"></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        <div class="form-check form-check-inline">
            <label asp-for="Types" class="form-check-label">Food</label>
            <input asp-for="Types" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Food">
        </div>
        <div class="form-check form-check-inline">
            <label asp-for="Types" class="form-check-label">Domestic</label>
            <input asp-for="Types" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Domestic">
        </div>
        <div class="form-check form-check-inline">
            <label asp-for="Types" class="form-check-label">Health</label>
            <input asp-for="Types" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Health">
        </div>
        <div class="form-check form-check-inline">
            <label asp-for="Types" class="form-check-label">Cosmetic</label>
            <input asp-for="Types" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="Cosmetic">
        </div>
        <div class="form-check form-check-inline">
            <label asp-for="Types" class="form-check-label">Other</label>
            <input asp-for="Types" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="Others" checked>
        </div>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <input type="submit" value="Create" class="btn chushka-bg-color" />
    </div>
</form>