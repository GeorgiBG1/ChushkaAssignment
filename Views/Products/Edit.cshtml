@model ProductViewModel
<h1 class="text-center">Edit Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post">
    <div class="form-group">
        <label asp-for="Name">@Model.Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name..." name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" class="form-control" id="price" placeholder="Price..." name="price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="4" placeholder="Description..." name="description">@Model.Description</textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        @{

            string[] str = { "Food", "Domestic", "Health", "Cosmetic", "Other" };
            @foreach (var type in str)
            {
                if (Model.Type.ToString() == type)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="ProductType" value="@type" checked="checked" />
                        <input asp-for=ProductType value="1" style="display: none;" />
                        <label class="form-check-label" asp-for="@type">@type</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="ProductType" value="@type" />
                        <input asp-for=ProductType value="1" style="display: none;" />
                        <label class="form-check-label" asp-for="@type">@type</label>
                    </div>
                }
            }
        }
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button asp-action="Edit" type="submit" class="btn chushka-bg-color">Edit</button>
        <button asp-action="Details" asp-route-id="@Model.Id" type="submit" class="btn chushka-bg-color">Cancel</button>
    </div>
</form>